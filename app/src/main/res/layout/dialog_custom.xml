<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/custom_root_layout">

    <TextView
        android:text="新条目"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/custom_title"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:textColor="@color/colorMainActivityBackground"
        android:textSize="24sp"
        android:textAlignment="center" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/custom_edit_reminder"
        android:layout_margin="4dp"
        android:background="@color/colorLightGrey"
        android:gravity="start"
        android:textColor="@color/colorBlack" />

    <CheckBox
        android:text="重要"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/custom_check_box"
        android:layout_margin="4dp"
        android:background="@color/colorLightGrey"
        android:paddingLeft="32dp"
        android:textColor="@color/colorOrange" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="取消"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/custom_button_cancel"
            android:layout_weight="1"
            android:textSize="18sp" />

        <Button
            android:text="确认"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:id="@+id/custom_button_commit"
            android:layout_weight="1"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>